{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CloudWatchLogsAccess",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:eu-west-2:771551874768:*"
    },
    {
      "Sid": "DynamoDBAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:UpdateItem",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:DeleteItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:eu-west-2:771551874768:table/durdle-main-table-dev",
        "arn:aws:dynamodb:eu-west-2:771551874768:table/durdle-main-table-dev/index/*",
        "arn:aws:dynamodb:eu-west-2:771551874768:table/durdle-pricing-config-dev",
        "arn:aws:dynamodb:eu-west-2:771551874768:table/durdle-fixed-routes-dev",
        "arn:aws:dynamodb:eu-west-2:771551874768:table/durdle-fixed-routes-dev/index/*",
        "arn:aws:dynamodb:eu-west-2:771551874768:table/durdle-admin-users-dev"
      ]
    },
    {
      "Sid": "SecretsManagerAccess",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue"
      ],
      "Resource": "arn:aws:secretsmanager:eu-west-2:771551874768:secret:durdle/*"
    },
    {
      "Sid": "S3Access",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject"
      ],
      "Resource": "arn:aws:s3:::durdle-vehicle-images-dev/*"
    }
  ]
}
